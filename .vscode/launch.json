	"version": "0.2.0",
	"configurations": [
		{
			"name": "Debug program",
			"preLaunchTask": "make",
			"type": "cppdbg",
			"request": "launch",
			"program": "${workspaceFolder}/miniRT",
			"args": ["rt/dragon.rt"],
			"cwd": "${workspaceFolder}",
			"MIMode": "lldb"
		},
		{
			"name": "Start rpc server",
			"preLaunchTask": "make rpc",
			"type": "cppdbg",
			"request": "launch",
			"program": "${workspaceFolder}/distributed/rpc",
			"args": ["server", "4242"],
			"cwd": "${workspaceFolder}/distributed",
			"MIMode": "lldb",
		},
		{
			"name": "Start rpc client",
			"preLaunchTask": "make rpc",
			"type": "cppdbg",
			"request": "launch",
			"program": "${workspaceFolder}/distributed/rpc",
			"args": ["client", "127.0.0.1", "4242"],
			"cwd": "${workspaceFolder}/distributed",
			"MIMode": "lldb",
		}
	]
}